#!/bin/bash

NEUTRAL='\e[0;m'
RED='\e[0;31m'
GREEN='\e[1;32m'

JOUJOU="../src/joujou"

if [ ! -x $JOUJOU  ]
  then
    echo "Joujou executable lacking" 1>&2
    exit 1
fi

GOODE=`find -path '*/good/*.mle' | sort`
BADE=`find -path '*/bad/*.mle' | sort`

GOODT=`find -path '*/good/*.mlt' | sort`
BADT=`find -path '*/bad/*.mlt' | sort`

echo "Typechecking, the fails with mle:"
nbrexpli=0
for f in $GOODE
  do
  OUTPUT=`$JOUJOU $f 2>&1`
  RET=$?
  if [ $RET != 0 ]
    then
      ((nbrexpli++)); 
      echo "$f: $RET"
#      echo "$OUTPUT"
  fi
done

for f in $BADE
  do
  OUTPUT=`$JOUJOU $f 2>&1`
  RET=$?
  if [ $RET != 1 ]
    then
      ((nbrexpli++));
      echo "$f: $RET"
#      if [ -n "$OUTPUT" ]
#        then echo "$OUTPUT"
#      fi
  fi
done

echo "Typechecking, the fails with mlt:"
nbrimpli=0
for f in $GOODT
  do
  OUTPUT=`$JOUJOU $f 2>&1`
  RET=$?
  if [ $RET != 0 ]
    then
      ((nbrimpli++));
      echo "$f: $RET"
#      echo "$OUTPUT"
  fi
done

for f in $BADT
  do
  OUTPUT=`$JOUJOU $f 2>&1`
  RET=$?
  if [ $RET != 1 ]
    then
      ((nbrimpli++));
      echo "$f: $RET"
#      if [ -n "$OUTPUT" ]
#        then echo "$OUTPUT"
#      fi
  fi
done


if [ $nbrexpli = 0 ]
 then
    echo -e "Explicit :${GREEN}$nbrexpli${NEUTRAL} fail\n"
 else
    echo -e "Explicit :${RED}$nbrexpli${NEUTRAL} fail(s)\n"
fi

if [ $nbrimpli = 0 ]
  then 
    echo -e "Implicit :${GREEN}$nbrimpli${NEUTRAL} fail\n"
  else
    echo -e "Implicit :${RED}$nbrimpli${NEUTRAL} fail(s)\n"
fi
